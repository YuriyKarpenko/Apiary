	<DataTemplate DataType="{x:Type m:M_Family}">
		<TextBlock>
			<Run Foreground="Blue" Text="{Binding Beehive, Mode=OneWay}"/>
			<Run Foreground="Black" Text="{Binding Name}"/>
		</TextBlock>
	</DataTemplate>

	<DataTemplate DataType="{x:Type vm:CM_Property_List}">
		<Grid v:GridBehaviour.PropertyGrid_Dictionary="{Binding List}">
		</Grid>
	</DataTemplate>

	<DataTemplate DataType="{x:Type vm:CM_Property_Value}">
		<Grid v:GridBehaviour.PropertyGrid_Value="{Binding Value}">
		</Grid>
	</DataTemplate>

	<!--#endregion-->

	<DataTemplate DataType="{x:Type it_wpf:IEnumerableProperty`1}" x:Key="dt_IEnumerableProperty">
		<v:UC_ListView/>
	</DataTemplate>

	
	<Style TargetType="{x:Type Window}" x:Key="Def_Window">
		<Setter Property="Background" Value="LightGray"/>
		<!--<Setter xmlns:core="clr-namespace:Apiary.Data;assembly=Apiary.Data" />-->
	</Style>
	<Style TargetType="{x:Type UserControl}">
		<Setter Property="Background" Value="LightGray"/>
	</Style>
	
	<Style TargetType="{x:Type CheckBox}">
		<Setter Property="Margin" Value="2"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>
	<Style TargetType="{x:Type TextBlock}">
		<Setter Property="Margin" Value="2"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<Style TargetType="{x:Type DataGridRow}">
		<Setter Property="Margin" Value="0"/>
		<Setter Property="Padding" Value="0"/>
		<Style.Triggers>
			<DataTrigger Binding="{Binding Hide}" Value="true">
				<Setter Property="Background" Value="LightGray"/>
				<Setter Property="FontStyle" Value="Italic"/>
			</DataTrigger>
		</Style.Triggers>
	</Style>

