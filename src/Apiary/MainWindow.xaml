<Window x:Class="Apiary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		
        xmlns:v="clr-namespace:Apiary.V" 
        xmlns:vm="clr-namespace:Apiary.VM" 
		
		Style="{StaticResource Def_Window}"
        Title="MainWindow" Height="350" Width="525"
	>

	<Window.DataContext>
		<vm:VM_Main/>
	</Window.DataContext>

	<Window.Resources>
		
		<!--<DataTemplate DataType="{x:Type vm:VM_Family}">
			<v:V_Family/>
		</DataTemplate>-->

		<DataTemplate DataType="{x:Type vm:VM_Beehive}">
			<v:V_SelfList/>
		</DataTemplate>
		
		<DataTemplate DataType="{x:Type vm:VM_Family}">
			<v:V_SelfList/>
		</DataTemplate>
		
	</Window.Resources>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<Menu ItemsSource="{Binding MainMenu}"/>
		
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<!--<Menu VerticalAlignment="Center">
				<MenuItem Header="File">
					<MenuItem Command="New"/>
					<MenuItem Command="Open"/>
				</MenuItem>
			</Menu>-->

		</StackPanel>

		<ContentControl Grid.Row="2" Content="{Binding Content}"/>

		<StatusBar Grid.Row="3"/>
	</Grid>
</Window>
